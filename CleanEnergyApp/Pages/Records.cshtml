@page
@model CleanEnergy.Pages.RecordsModel
@{
}
<br />
<h2>Records just for admin view.</h2>

@if (Model.hasData)
{
    <h2>Records</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Person ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Energy in KWh/year</th>
                <th>Size of Solar Panels in m2</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var record in Model.records)
            {
                <tr>
                <th>@record.PersonID</th>
                <th>@record.FirstName</th>
                <th>@record.LastName</th>
                <th>@record.Energy</th>
                <th>@record.Size</th>
            </tr>
            }

        </tbody>


    </table>


}
else if (Model.tried == true)
{
    <p>Wrong username or password.</p>
}


<div class=container>
    <form method="post">
        <label for="fname">Username</label><br />
        <input type="text" id="fname" name="username" autofocus required class="form-control input-group" style="width: 300px"/><br />

        <label for="lname">Password</label><br />
        <input type="password" id="lname" name="password" required class="form-control input-group" style="width: 300px" /><br />

        <input type="submit" value="Submit" class="btn btn-info"/>
    </form>
</div>

